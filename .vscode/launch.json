{
  // Launch with gdb; builds first via the preLaunchTask
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/miniRT",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        // // Below allows to debug child processes:
        // //
        // cmd to switch context:
        // info inferiors
        // inferior 1
        // inferior 2
        // config to uncomment for this to work:
        // {
        //   "description": "Follow child after fork",
        //   "text": "set follow-fork-mode child"
        // },
        // {
        //   "description": "Keep parent attached",
        //   "text": "set detach-on-fork off"
        // }
      ],
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "build program"
    }
  ]
}